<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color"
        android:id="@+id/settings" tools:context=".ui.settings.SettingsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/configuracions"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorHint"
            android:background="@drawable/textview_background"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp">

        <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/colorHint"
                android:background="@drawable/ic_return"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/regular"
                android:text="CONFIGURACIONS"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.511"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text=" Foto de perfil"
            android:background="@drawable/textview_background"
            android:backgroundTint="@color/gris"
            android:layout_width="350dp"
            android:layout_height="40dp" android:id="@+id/text_pfp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/configuracions" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text=" Nom d'usuari"
            android:background="@drawable/textview_background"
            android:backgroundTint="@color/gris"
            android:layout_width="350dp"
            android:layout_height="40dp" android:id="@+id/text_username"
            app:layout_constraintTop_toBottomOf="@+id/text_pfp"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text=" Ciutat"
            android:background="@drawable/textview_background"
            android:backgroundTint="@color/gris"
            android:layout_width="350dp"
            android:layout_height="40dp" android:id="@+id/text_city"
            app:layout_constraintTop_toBottomOf="@+id/text_username"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text=" Canvi de contrasenya"
            android:background="@drawable/textview_background"
            android:backgroundTint="@color/gris"
            android:layout_width="350dp"
            android:layout_height="40dp" android:id="@+id/text_psw"
            app:layout_constraintTop_toBottomOf="@+id/text_city"
            android:layout_marginTop="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/ic_unkownuser"
            android:id="@+id/btn_edit_pfp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/configuracions" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.912"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="RocÃ­o"
            android:textAlignment="viewEnd"
            android:background="@color/transparent"
            android:ems="10"
            android:id="@+id/edit_username"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_pfp" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.85"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:textAlignment="viewEnd"
            android:background="@color/transparent"
            android:ems="10"
            android:id="@+id/edit_city"
            app:layout_constraintTop_toBottomOf="@+id/text_username" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.85"/>
    <ImageButton
            android:text=""
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_change_psw"
            android:background="@drawable/ic_arrow_right"
            android:backgroundTint="@color/gris"
            app:layout_constraintTop_toBottomOf="@+id/text_city" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.923"/>

</androidx.constraintlayout.widget.ConstraintLayout>
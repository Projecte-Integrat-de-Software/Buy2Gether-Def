<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/layout_avatar_alert_dialog"
          android:layout_width="match_parent"
          android:layout_height="240dp"
          android:layout_marginBottom="70dp"
          android:layout_marginTop="350dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners_shape"
            android:elevation="10dp">

        <Button
                android:id="@+id/btn_check_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/transparent"
                app:layout_constraintVertical_bias="0"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:id="@+id/btn_change_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/transparent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_check_image"/>


        <Button
                android:id="@+id/btn_cancel_avatar_dialog"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/transparent"
                app:layout_constraintVertical_bias="0"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_change_image"/>

        <TextView
                android:id="@+id/txt_veure_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veure imatge"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/btn_check_image"
                app:layout_constraintTop_toTopOf="@+id/btn_check_image"/>

        <TextView
                android:id="@+id/txt_canviar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canviar imatge"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/btn_change_image"
                app:layout_constraintTop_toTopOf="@+id/btn_change_image"/>

        <TextView
                android:id="@+id/txt_cancel_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/btn_cancel_avatar_dialog"
                app:layout_constraintTop_toTopOf="@+id/btn_cancel_avatar_dialog"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
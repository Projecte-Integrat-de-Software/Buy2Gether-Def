<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="match_parent"
        android:id="@+id/friends" tools:context=".ui.friends.FriendsFragment">

    <ImageView
            android:id="@+id/img_useropt"
            android:layout_width="431dp"
            android:layout_height="174dp"
            android:background="@drawable/img_useropt"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.001"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/corners_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_useropt"
        app:layout_constraintVertical_bias="0.0">
        <!-- Plus button -->
        <!-- Return button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_amics"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="44dp"
            android:background="@color/transparent"
            android:clickable="true"
            android:foreground="@drawable/ripple_button_effect"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_plus" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_return"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:background="@color/transparent"
            android:clickable="true"
            android:foreground="@drawable/ripple_button_effect"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autoText="false"
            android:text="AMICS"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/cardview_dark_background"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Recycler view -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friends_list"
            android:layout_width="wrap_content"
            android:layout_height="584dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/backgroud_friends"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="70dp"
            android:fillViewport="false"
            android:paddingHorizontal="10dp"
            android:requiresFadingEdge="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="13"
            tools:listitem="@layout/fragment_friend_list_item">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
            android:id="@+id/img_pfpBruno"
            android:layout_width="77dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/img_bruno"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AA"
            style="@style/text"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.05"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EEE"
            style="@style/text"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.08"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_settings"
            android:background="@color/transparent"
            android:foreground="@drawable/ripple_button_effect"
            android:clickable="true"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_lan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_lan_sp"
            android:background="@color/transparent"
            android:foreground="@drawable/ripple_button_effect"
            android:clickable="true"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.869"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
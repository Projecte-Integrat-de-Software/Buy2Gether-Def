<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pis.buy2gether">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Buy2Gether">
        <activity
            android:name=".usecases.home.user.comanda.comanda_view.ComandaActivity"
            android:exported="false" />
        <activity
                android:name=".usecases.home.user.settings.CheckImageActivity"
                android:exported="false" />
        <activity
            android:name=".usecases.onboarding.sign_in.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".usecases.onboarding.log_in.forgot_psw.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".usecases.onboarding.log_in.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".usecases.home.home.product_view.GrupActivity"
            android:exported="false" />
        <activity
            android:name=".usecases.launch.SplashScreenActivity"
            android:exported="true"
            android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".usecases.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
    </application>

</manifest>